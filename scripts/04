echo "CRON_1=/etc/crontab\
CRON_0=/etc/crontab_old\
\
if [ ! -e $CRON_0 ]; then\
	echo "Backup does not exist"\
	sudo cp $CRON_1 $CRON_0\
	exit 0\
fi\
\
MD5_1=`md5sum $CRON_1 | awk '{ print $1 }'`\
MD5_0=`md5sum $CRON_0 | awk '{ print $1 }'`\
\
if [ "$MD5_1" != "$MD5_0" ]; then\
	echo "Hello, root! Our crontab file has been modified" | mail -s "Crontab Alert" root\
fi\
\
sudo cp $CRON_1 $CRON_0" >> ~/crontab_alert
